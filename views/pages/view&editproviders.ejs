<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View and edit Providers</title>

  <!-- Box Icons  -->
  <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
  <!-- Styles  -->
  <link rel="stylesheet" href="/css/adminDashboard.css" />
</head>

<body>
  <%- include('../partials/aside.ejs')%>

    <section class="users">
      <% if (providers.length> 0) { %>
        <div class="board">
          <table width="100%">
            <thead>
              <tr>
                <th>Logo</th>
                <th>Name</th>
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <% providers.forEach(prov=> { %>
              <tbody>

                <tr id="user-<%=prov.id%>">
                  <td class="people">
                    <div class="people-de">
                        <img src="../../images/<%= prov.image %>" alt="" srcset="">
                    </div>
                  </td>
                  <td class="people-des">
                    <p name="email">
                      <%= prov.name %>
                    </p>
                  </td>
                  <td class="edit"><a href="/admin/edituser/<%=prov.id%>">Edit</a></td>
                  <td class="edit"> <a href="#" onclick="return deleteProvider('<%=prov.id%>');">Delete</a></td>
                </tr>

              </tbody>
              <% }) %>
          </table>
          <% } else { %>
            <p>There are no users to display...</p>
            <% } %>
        </div>
    </section>

    <!-- Link JS -->
    <script src="/js/adminDashboard.js"></script>

</body>

</html>