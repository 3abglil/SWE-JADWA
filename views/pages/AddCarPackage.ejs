<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add product</title>

  <!-- Box Icons  -->
  <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
  <!-- Styles  -->
  <link rel="stylesheet" href="/css/adminDashboard.css" />
</head>

<body>
  <%- include('../partials/aside.ejs')%>


    <!-- add prod -->
    <section class="home">
      <div class="container">
        <div class="right">
          <h2 id="j">Add Car Packages</h2>
          <form action="/admin/addCarPackage" method="post">
            <!-- enctype="multipart/form-data" -->
            <select class="field" name="type">
              <option value="">Type</option>
              <option value="Basic">Basic</option>
              <option value="Standard">Standard</option>
              <option value="Premium">Premium</option>
            </select>
            <input type="number" name="price" class="field" placeholder="Package's Price" />
            <input type="text" name="Dfixing" class="field" placeholder="Direct fixing" />
            <input type="text" name="COinsurance" class="field" placeholder="COinsurance" />
            <input type="text" name="AgencyCOinsurance" class="field" placeholder="AgencyCOinsurance" />
            <input type="text" name="Roadside_Assistance" class="field" placeholder="Roadside Assistance" />
            <input type="text" name="Personal_Accident" class="field" placeholder="Personal Accident" />
            <input type="text" name="Civil_Liability" class="field" placeholder="Civil Liability" />
            <input type="text" name="Police_Report" class="field" placeholder="Police Report" />
            <!-- <textarea name="description" class="field" placeholder="Enter Product description"></textarea> -->
            <!-- <input type="file" name="img" class="field" placeholder="image"> -->
            <select class="field" name="providerId">
              <option value="">provider</option>
              <% providers.forEach((prov, index) => { %>
                <option value="<%=prov.id%>"><%=prov.name%></option>
                <% }) %>
            </select> 
            <input type="submit" class="btn" value="ADD">
          </form>
        
        </div>
      </div>
    </section>

    <!-- Link JS -->
    <script src="/js/adminDashboard.js"></script>

</body>

</html>